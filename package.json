{
  "name": "@exsat/account-initializer",
  "version": "1.0.12",
  "description": "A script to manage exSat accounts.",
  "main": "dist/index.js",
  "bin": "dist/index.js",
  "scripts": {
    "start": "ts-node src/start.ts",
    "test": "ts-node test/start.ts",
    "test-server": "ts-node mock-server/server.ts",
    "build": "tsc",
    "dev": "nodemon --exec ts-node src/index.ts",
    "pkg": "npm run build && pkg . --compress Brotli"
  },
  "dependencies": {
    "@inquirer/prompts": "^5.1.2",
    "@scure/bip39": "^1.0.0",
    "@types/crypto-js": "^4.2.2",
    "@types/fs-extra": "^11.0.4",
    "@types/json-server": "^0.14.7",
    "@types/randombytes": "^2.0.3",
    "@types/scrypt-js": "^3.0.1",
    "@types/uuid": "^9.0.8",
    "@wharfkit/antelope": "^1.0.0",
    "axios": "^0.24.0",
    "body-parser": "^1.20.2",
    "crypto-js": "^4.0.0",
    "ethereum-cryptography": "^2.2.0",
    "express": "^4.19.2",
    "fs-extra": "^11.2.0",
    "hdkey": "^2.1.0",
    "pkg": "^5.8.1",
    "qrcode-terminal": "^0.12.0",
    "readline-sync": "^1.4.10",
    "web3-errors": "^1.2.0",
    "web3-types": "^1.7.0",
    "web3-utils": "^4.3.0",
    "web3-validator": "^2.0.6",
    "wif": "^4.0.0"
  },
  "devDependencies": {
    "@types/hdkey": "^2.0.3",
    "@types/node": "^16.18.98",
    "@types/qrcode-terminal": "^0.12.2",
    "@types/readline-sync": "^1.4.4",
    "@types/wif": "^2.0.5",
    "dotenv": "^10.0.0",
    "nodemon": "^2.0.20",
    "ts-node": "^10.9.2",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "typescript": "^4.9.5"
  },
  "pkg": {
    "scripts": [
      "dist/*.js"
    ],
    "assets": [
      "dist/**/*",
      "src/**/*",
      "public/**/*"
    ],
    "targets": [
      "node18-linux-x64",
      "node18-win-x64",
      "node18-macos-x64"
    ],
    "outputPath": "pkg"
  },
  "author": "Purson",
  "license": "MIT"
}
